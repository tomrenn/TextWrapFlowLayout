<?xml version="1.0" encoding="utf-8"?>
<com.example.tomrenn.textwrapper.TextWrapFlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_wrapTextTo="@+id/overflowText" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
        android:background="#000000" />


    <TextView
        android:id="@+id/overflowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.example.tomrenn.textwrapper.TextWrapFlowLayout>